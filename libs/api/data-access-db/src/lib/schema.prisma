generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("OKKINO_DB_URL")
}

model HomeBlock {
  id             String @id @default(uuid())
  /// @Validator.IsString()
  /// @Validator.MaxLength(100)
  /// @Validator.MinLength(3)
  navigationPath String
  image          Image  @relation(fields: [imageId], references: [id])
  imageId        String @unique
}

model Product {
  id            String @id @default(uuid())
  name          String @unique
  description   String
  price         Int
  discountPrice Int?

  images            Image[]
  availableColors   Color[]
  productCategories ProductCategory[]
  productSizes      ProductSize[]
  productLengths    ProductLength[]
}

model Image {
  id        String     @id @default(uuid())
  title     String
  key       String     @unique
  url       String     @unique
  bgColor   String
  order     Int
  //----Relations----//
  /// @HideField()
  homeBlock HomeBlock?
  /// @HideField()
  product   Product?   @relation(fields: [productId], references: [id])
  /// @HideField()
  productId String?
}

model Color {
  id String @id @default(uuid())

  name     String    @unique
  value    String
  //----Relations----//
  products Product[]
}

model ProductCategory {
  id String @id @default(uuid())

  name     String    @unique
  /// @HideField()
  products Product[]
}

model ProductSize {
  id String @id @default(uuid())

  name     String    @unique
  /// @HideField()
  products Product[]
}

model ProductLength {
  id String @id @default(uuid())

  name     String    @unique
  /// @HideField()
  products Product[]
}
