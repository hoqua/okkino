      "@okkino/api/generated-db-types": ["libs/api/generated-db-types/src/index.ts"],
      "@okkino/api/utils-env": ["libs/api/utils-env/src/index.ts"],
      "@okkino/web/data-access-graphql": ["libs/web/data-access-graphql/src/index.ts"],
      "@okkino/web/utils-env": ["libs/web/utils-env/src/index.ts"],
      "@okkino/web/utils-env-admin": ["libs/web/utils-env-admin/src/index.ts"],
      "@okkino/web/utils-shared": ["libs/web/utils-shared/src/index.ts"]
