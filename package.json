{
  "name": "okkino",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "sereve:all": "npx concurrently --kill-others-on-fail \"npm:start:*\"",
    "----START----": "-------------------------",
    "start:gql:watch": "graphql-codegen --config tools/graphql-codegen/codegen.yml --watch",
    "start:db:watch": "npm run db:dockers:dev  && npm run db:migrate:dev && npm run db:seed:dev && prisma generate --watch",
    "start:verify-env": "npm run validate:web-env && npm run validate:api-env",
    "start:api": "nx serve api",
    "start:web": "nx serve web",
    "start:web-admin": "nx serve web-admin --port 3000",
    "----NX SECTION----": "-------------------------",
    "build": "nx build",
    "test": "nx test",
    "----DB SECTION----": "-------------------------",
    "db:dockers:dev": "docker-compose -f tools/okkino-environment/dev.docker-compose.yml up -d --no-recreate --remove-orphans",
    "db:migrate:dev": "npx env-cmd -f .local.env npx prisma migrate dev",
    "db:studio": "npx env-cmd -f .local.env npx prisma studio",
    "db:seed:dev": "npx env-cmd -f .local.env ts-node --project tools/tsconfig.tools.json tools/database/seed.dev.ts",
    "----VALIDATE ENV SECTION----": "--------------------------------",
    "validate:web-env": "npx env-cmd -f .local.env ts-node --project tools/tsconfig.tools.json tools/environment/validate-web-env.ts",
    "validate:api-env": "npx env-cmd -f .local.env ts-node --project tools/tsconfig.tools.json tools/environment/validate-api-env.ts",
    "----TOOLS SECTION----": "-------------------------",
    "verify": "nx workspace-lint && nx format:write && nx format:check && nx affected --target=lint --fix --parallel=3 && npx nx affected --target=test --parallel=3 && nx affected --target=build --parallel=3 --exclude=web",
    "----DEPLOY SECTION----": "-----------------------",
    "cd:api": "npm run cd:validate-api && npm run cd:db-push && npm run cd:db-seed  && npx nx build api --prod",
    "cd:web": "npm run cd:validate-web && npx nx build web --prod",
    "cd:validate-api": "npx ts-node --project tools/tsconfig.tools.json tools/environment/validate-api-env.ts",
    "cd:validate-web": "npx ts-node --project tools/tsconfig.tools.json tools/environment/validate-web-env.ts",
    "cd:db-push": "npx prisma db push --accept-data-loss",
    "cd:db-seed": "npx ts-node --project tools/tsconfig.tools.json tools/database/seed.dev.ts"
  },
  "private": true,
